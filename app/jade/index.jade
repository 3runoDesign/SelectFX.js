extends /layouts/_default

block content
  form#my_form(action="", method="post")
    p.item
      label(for="options") Teste
      select#options(name="options")
        option(value="1") Opção-1 1
        option(value="2") Opção-1 2
        option(value="3" selected="selected") Opção-1 3
        option(value="4") Opção-1 4
        option(value="5") Opção-1 5
        option(value="6") Opção-1 6

    p.item
      label(for="options2") Teste
      select#options2(name="options2")
        optgroup(label="Teste")
          option(value="1") Opção-2 1
          option(value="2") Opção-2 2
        optgroup(label="Teste 2")
          option(value="3") Opção-2 3
          option(value="4") Opção-2 4
          option(value="5") Opção-2 5

    input(type="submit", value="Submit")
